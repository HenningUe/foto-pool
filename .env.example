# iCloud Photo Sync Tool Configuration
# Copy this file to .env and fill in your settings

# iCloud Credentials
# ==================
# Your iCloud username (email address)
ICLOUD_USERNAME=your.email@icloud.com

# App-specific password for iCloud (NOT your regular iCloud password)
# Generate this at: https://appleid.apple.com/sign-in
# Go to Sign-In and Security > App-Specific Passwords
ICLOUD_PASSWORD=your-app-specific-password

# Sync Settings
# =============
# Local directory where photos will be synced
# Use forward slashes (/) even on Windows
SYNC_DIRECTORY=./photos

# Set to true to preview actions without making changes
DRY_RUN=false

# Logging level: DEBUG, INFO, WARNING, ERROR
LOG_LEVEL=INFO

# Maximum number of photos to download in one run (0 = no limit)
MAX_DOWNLOADS=0

# Skip photos larger than this size in MB (0 = no limit)
MAX_FILE_SIZE_MB=0

# Pushover Notifications (Optional)
# ==================================
# Enable Pushover notifications for 2FA authentication
ENABLE_PUSHOVER=false

# Pushover API token (get from https://pushover.net/apps/build)
PUSHOVER_API_TOKEN=your-pushover-api-token

# Pushover user key (get from https://pushover.net)
PUSHOVER_USER_KEY=your-pushover-user-key

# Optional: Specific device name to send notifications to
# Leave empty to send to all devices
PUSHOVER_DEVICE=
